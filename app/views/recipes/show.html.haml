%p#notice= notice

- if policy(recipe).update?
  = link_to 'Edit', edit_recipe_path(recipe), class: "edit"
  \|
- if policy(recipe).destroy?
  = link_to 'Destroy', recipe, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "delete"
  \|
= link_to 'Back', recipes_path, class: "back"

%h3
  %b
    = recipe.name
- if recipe.image.present?
  = link_to image_tag(recipe.image_url, alt: "#{recipe.name}", size: "150x150"), recipe
- else
  = link_to image_tag(recipe.image.default_url, size: "150x150"), recipe
