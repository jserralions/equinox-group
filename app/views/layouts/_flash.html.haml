.container
  .row
    .col-xs-12
      - flash.each do |key, value|
        .alert.alert-dismissable{ :class => "alert-#{ key == 'notice' ? 'info' : key }", :role => "alert" }
          %button.close{ :type => "button", :aria => { :label => "Close" }, :data => { :dismiss => "alert" } }
            %span{ :aria => { :hidden => "true" } } &times;
          %strong
            = value