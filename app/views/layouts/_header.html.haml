%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      = link_to "Recipes", root_path, class: "navbar-brand"
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        = form_tag search_path, method: 'get', class: 'form navbar-form navbar-left', role: 'search' do
          .form-group
            = text_field_tag :name_query, params[:name_query], placeholder: "Search", class: "form-control"
          = submit_tag 'Search', class: 'btn btn-success'
      %ul.nav.navbar-nav.navbar-right
        %li
          - if !user_signed_in?
            = link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2)
          - else
            = link_to "Sign off (#{ current_user.email })", destroy_user_session_path, :method => :delete



